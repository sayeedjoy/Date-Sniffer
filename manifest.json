{
    "manifest_version": 3,
    "name": "Date Sniffer",
    "version": "1.0",
    "description": "Extract post dates from TikTok and LinkedIn",
    "permissions": [
      "activeTab",
      "scripting",
      "clipboardWrite"
    ],
    "host_permissions": [
      "https://*.tiktok.com/*",
      "https://*.linkedin.com/*"
    ],
    "action": {
      "default_popup": "popup/popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "content_scripts": [
    {
        "matches": [
            "https://*.tiktok.com/*",
            "https://*.linkedin.com/*"
        ],
        "js": ["content-scripts/social-date-extractor.js"]
    }
],
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }